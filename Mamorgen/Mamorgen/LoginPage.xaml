<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="Mamorgen.LoginPage"
	BackgroundColor="#999999">
	<ContentPage.Content>
		<StackLayout VerticalOptions="Center" Padding="50" Spacing="5" >
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

                <Button x:Name="schoolSelect" Grid.Column="0" Text="Kies" />
				<Label x:Name="schoolName" Grid.Column="1" TextColor="White" YAlign="Center" />
			</Grid>
			<Entry x:Name="username" Placeholder="username"/>
			<Entry IsPassword="True" x:Name="password" Placeholder="password"/>
			<Button x:Name="loginButton" Text="Login" BackgroundColor="#AD55EF"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
